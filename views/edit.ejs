<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nhà xuất bản ABZ - Chỉnh sửa bài báo</title>
    <link rel="stylesheet" href="/css/index.css">
    <style>
      .preview-image {
        max-width: 150px;
        max-height: 150px;
        margin-top: 10px;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .btn-group {
        margin-top: 20px;
        display: flex;
        gap: 10px;
      }
      .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
      }
      .btn-primary {
        background-color: #2196F3;
        color: white;
      }
      .btn-secondary {
        background-color: #6c757d;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Nhà xuất bản ABZ</h1>
      <h2>Chỉnh sửa bài báo</h2>

      <form action="/update-article/<%= article.id %>" method="POST" class="edit-form" enctype="multipart/form-data">
        <div class="form-group"> 
          <label for="title">Tên bài báo:</label>
          <input type="text" id="title" name="title" required class="form-control" value="<%= article.title %>">
        </div>
        
        <div class="form-group">
          <label for="author">Tên nhóm tác giả:</label>
          <input type="text" id="author" name="author" required class="form-control" value="<%= article.author %>">
        </div>
        
        <div class="form-group">
          <label for="isbn">Chỉ số ISBN:</label>
          <input type="text" id="isbn" name="isbn" required class="form-control" value="<%= article.isbn %>">
        </div>
        
        <div class="form-group">
          <label for="pages">Số trang:</label>
          <input type="number" id="pages" name="pages" required class="form-control" value="<%= article.pages %>">
        </div>
        
        <div class="form-group">
          <label for="year">Năm xuất bản:</label>
          <input type="number" id="year" name="year" required class="form-control" value="<%= article.year %>">
        </div>
        
        <div class="form-group">
          <label for="image">Hình ảnh:</label>
          <input type="file" id="image" name="image" accept="image/*" class="form-control">
          <div>
            <p><small>Ảnh hiện tại:</small></p>
            <img src="<%= article.image %>" alt="Hình ảnh hiện tại" class="preview-image">
          </div>
        </div>
        
        <div class="btn-group">
          <button type="submit" class="btn btn-primary">Cập nhật</button>
          <a href="/" class="btn btn-secondary">Hủy</a>
        </div>
      </form>
    </div>

    <script>
      // Hiển thị ảnh xem trước khi người dùng chọn ảnh mới
      document.getElementById('image').addEventListener('change', function(e) {
        if (e.target.files && e.target.files[0]) {
          const reader = new FileReader();
          const preview = document.querySelector('.preview-image');
          
          reader.onload = function(event) {
            preview.src = event.target.result;
          }
          
          reader.readAsDataURL(e.target.files[0]);
        }
      });
    </script>
  </body>
</html>